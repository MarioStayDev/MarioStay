            android:background="#000000" />-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip1"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_lift"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip2"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_parking"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip3"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_cctv"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip4"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_power"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip5"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_playground"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/chip_margin"
                android:id="@+id/chip6"
                android:background="@drawable/chip_shape_deactivated"
                android:text="@string/chip_text_pool"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!--<ToggleButton
