                android:layout_height="wrap_content"
                android:textOn="CCTV Security"
                android:textOff="CCTV Security" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:textOn="Power Backup"
                android:textOff="Power Backup"
                android:layout_height="wrap_content" />

